<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/activity_score_keeper"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.collaboration.scorekeeper.ui.ui.ScoreKeeperActivity">

  <Space
    android:id="@+id/space_vertical_splitter"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_centerVertical="true"/>

  <Space
    android:id="@+id/space_horizontal_splitter_top"
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:layout_above="@id/space_vertical_splitter"
    android:layout_centerHorizontal="true"/>

  <Space
    android:id="@+id/space_horizontal_splitter_bottom"
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:layout_below="@id/space_vertical_splitter"
    android:layout_centerHorizontal="true"/>

  <ImageButton
    android:id="@+id/image_btn_new_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/space_vertical_splitter"
    android:layout_margin="@dimen/home_button_margin"
    android:layout_toLeftOf="@id/space_horizontal_splitter_top"
    android:layout_toStartOf="@id/space_horizontal_splitter_top"
    android:background="@null"
    android:contentDescription="@string/home_new_game"
    android:scaleType="fitCenter"
    android:src="@mipmap/ic_new_game"/>

  <ImageButton
    android:id="@+id/image_btn_load_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/space_vertical_splitter"
    android:layout_margin="@dimen/home_button_margin"
    android:layout_toEndOf="@id/space_horizontal_splitter_top"
    android:layout_toRightOf="@id/space_horizontal_splitter_top"
    android:background="@null"
    android:contentDescription="@string/home_load_game"
    android:scaleType="fitCenter"
    android:src="@mipmap/ic_load_game"/>

  <ImageButton
    android:id="@+id/image_btn_player_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/space_vertical_splitter"
    android:layout_margin="@dimen/home_button_margin"
    android:layout_toLeftOf="@id/space_horizontal_splitter_bottom"
    android:layout_toStartOf="@id/space_horizontal_splitter_bottom"
    android:background="@null"
    android:contentDescription="@string/home_player_list"
    android:scaleType="fitCenter"
    android:src="@mipmap/ic_player_list"/>

  <ImageButton
    android:id="@+id/image_btn_game_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/space_vertical_splitter"
    android:layout_margin="@dimen/home_button_margin"
    android:layout_toEndOf="@id/space_horizontal_splitter_bottom"
    android:layout_toRightOf="@id/space_horizontal_splitter_bottom"
    android:background="@null"
    android:contentDescription="@string/home_game_history"
    android:scaleType="fitCenter"
    android:src="@mipmap/ic_game_history"/>
</RelativeLayout>
