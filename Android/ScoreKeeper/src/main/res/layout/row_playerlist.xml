<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_player_list"
                android:orientation="horizontal"

  >

  <TextView
    android:id="@+id/textview_player_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:text=""
    android:textSize="16sp"/>

  <TextView
    android:id="@+id/textview_player_gmail_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_toEndOf="@id/textview_player_name"
    android:layout_toRightOf="@id/textview_player_name"
    android:gravity="end"
    android:textStyle="italic"
    android:text=""
    android:textSize="14sp"/>
</RelativeLayout>